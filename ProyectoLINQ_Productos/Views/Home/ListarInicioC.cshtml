@{
    ViewBag.Title = "Listado de Productos que su Descripción Inicia con la Letra 'C'";
}

@model IEnumerable<ProyectoLINQ_Productos.Models.Producto>

<div>
    <title>@ViewBag.Title</title>
    <h1>@ViewBag.Title</h1>
    <table>
        <tr>
            <th>
                ID
            </th>
            <th></th>
            <th>
                Descripción
            </th>
            <th></th>
            <th>
                Precio
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>

                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <th></th>
                <td>
                    @Html.DisplayFor(modelItem => item.Descripcion)
                </td>
                <th></th>
                <td>
                    @Html.DisplayFor(modelItem => item.Precio)
                </td>
                <th></th>
            </tr>
        }

    </table>
    <p><a href="/">Volver al Menú.</a></p>
</div>
